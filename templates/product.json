{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "title": {
          "type": "product-title",
          "settings": {
            "product": "{{ context.product }}",
            "heading_size": "h1",
            "alignment": "start"
          }
        }
      },
      "block_order": [
        "title"
      ],
      "settings": {
        "enable_sticky_info": true,
        "gallery_layout": "stacked",
        "media_size": "large",
        "constrain_to_viewport": true,
        "mobile_thumbnails": "hide",
        "hide_variants": true,
        "enable_video_looping": false,
        "padding_top": 36,
        "padding_bottom": 12
      }
    },    
    
  },
  "order": ["main"]
}
